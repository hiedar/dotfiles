" search with ignoring case
set ignorecase

" Numbers
set number
set relativenumber

" clipboard
set clipboard=unnamed

" keyremap
nmap n nzz
nmap N Nzz
nmap * *zz
nmap # #zz
nmap H Hzz
nmap L Lzz

" noremap j gj
" noremap k gk
noremap <C-l>   zz
noremap <C-h>   ^
nnoremap Y y$
noremap ; :
noremap : ;
noremap ' "
noremap " '
noremap! : ;
noremap! ; :
noremap! " '
noremap! ' "
